pipeline {
 agent{
  node {
  label 'workstation'
  }

   parameters {
   choice(name: 'env', choices: ['dev', 'prod'], description: 'choose environment ')
    string(name: 'component', defaultValue: '', description: 'give component')

   }


   stages{
    stage (' ansible playbook'){

      steps{
      sh 'ansible-playbook -i ${component}-${env}.sonydevops.online, roboshop.yml -e ansible_user=centos ansible_password=DevOps321 -e env=${env} -e role_name =${component}'
       }
     }



  post{
   always {
    cleanWs()
    }
   }


 }
}
